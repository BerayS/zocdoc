@page "{id:min(1)}"
@model AspNetCoreCookieAuthentication.Pages.Account.EditModel
@{
}

<h1>Edit</h1>

<form method="post" class="mt-3">
    <input hidden asp-for="User.Id"/>

    <div class="form-group row">
        <label asp-for="User.Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text" asp-for="User.Email" class="form-control" />
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label asp-for="User.Password" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text" asp-for="User.Password" class="col-sm-3 form-control" />
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label asp-for="User.Role" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="User.Role">
                <option value="Admin">Admin</option>
                <option value="Client">Client</option>
                <option value="Doctor">Doctor</option>

            </select>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-page="../Admin" class="btn btn-danger">Cancel</a>
        </div>
    </div>
</form>