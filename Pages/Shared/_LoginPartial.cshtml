@{  
    string? userRole = this.User.Claims?.Where(f => f.Type == System.Security.Claims.ClaimTypes.Role)?.FirstOrDefault()?.Value;
}
    @if (User.Identity.IsAuthenticated) {
    if(userRole == "Admin") {
        <li class="nav-item" style="list-style:none;">
            <a class="nav-link text-dark" asp-area="" asp-page="/Admin">Admin</a>
        </li>
    } else if(userRole == "Client") {
            <li class="nav-item" style="list-style:none;">
                <a class="nav-link text-dark" asp-area="" asp-page="/ClientPanel">Client Panel</a>
            </li>
        } else if (userRole == "Doctor") {
            <li class="nav-item" style="list-style:none;">
                <a class="nav-link text-dark" asp-area="" asp-page="/Doctor">Doctor Panel</a>
            </li>
        } else {

        <li class="nav-item" style="list-style:none;">
            Hello @User.Identity.Name!
        </li>
    }
        <li class="nav-item" style="list-style:none;">
            <form class="form-inline" asp-area="" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    } else {
        <li class="nav-item" style="list-style:none;">
            <a class="nav-link text-dark" asp-area="" asp-page="/Account/Register">Sign Up</a>
        </li>
        <li class="nav-item" style="list-style:none;">
            <a class="nav-link text-dark" asp-area="" asp-page="/Account/Login">Sign In</a>
        </li>
    }
